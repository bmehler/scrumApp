<div class="container" style="margin-top:100px;">
  <div class="row">
    <div class="col-lg-12">
      <h1>Show Product Backlog</h1>
      <dl class="dl-horizontal">
        <dt>Name:</dt>
        <dd><%= @productbacklog.name %>
        <dt>Status:</dt>
        <dd><%= @productbacklog.status_id == 1 ? 'not refined' : @productbacklog.status_id == 2 ? 'in progress' : 'closed' %>
      </dl>
      <%= link_to 'Back to listing', productbacklogs_path, {:class => 'btn btn-success'} %>
    </div>
  </div>
</div>
